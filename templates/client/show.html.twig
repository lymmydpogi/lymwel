{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}
{% block page_title %}Client Details{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
/* Page Header */
.page-header {
    text-align: center;
    margin-bottom: 40px;
}

.page-header h1 {
    font-size: 32px;
    font-weight: 700;
    margin: 0 0 10px 0;
    color: #1a1a1a;
    letter-spacing: -0.5px;
}

.page-header p {
    font-size: 16px;
    color: #6b7280;
    margin: 0;
}

/* Table */
.table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 30px;
}

.table th,
.table td {
    padding: 12px 15px;
    border: 1px solid #e5e7eb;
    text-align: left;
}

.table th {
    background-color: #f9fafb;
    font-weight: 600;
    color: #1a1a1a;
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
    font-family: inherit;
}

.btn:hover {
    transform: translateY(-1px);
}

.btn-back {
   display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    color: #6b7280;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s ease;
    border-radius: 8px;
    border: 1px solid #e5e7eb;
}

.btn-back:hover {
    background: #e5e7eb;
}

.btn-edit {
    background: #8b5cf6;
    color: #ffffff;
    border: none;
}

.btn-edit:hover {
    background: #7c3aed;
}

.btn-delete {
    background: #ef4444;
    color: #ffffff;
    border: none;
}

.btn-delete:hover {
    background: #dc2626;
}

/* Responsive */
@media (max-width: 768px) {
    .table th,
    .table td {
        font-size: 14px;
        padding: 10px;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }
}
</style>
{% endblock %}

{% block body %}
<div class="page-header">
    <h1>Client Details</h1>
    <p>View client information below</p>
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ client.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ client.name }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ client.email }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ client.phone }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ client.address }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ client.status }}</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
    </tbody>
</table>

<div class="form-actions">
    <a href="{{ path('app_client_index') }}" class="btn btn-back" <span>‚Üê </span>Back to List</a>
    <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-edit">Edit client</a>

    <form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" style="display:inline-block; margin-left: 10px;" onsubmit="return confirm('Are you sure you want to delete this client?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
        <button type="submit" class="btn btn-delete">Delete</button>
    </form>
</div>
{% endblock %}
